#!/usr/bin/env python3

from lpcvc import DataSet
import argparse

from lpcvc.compare import Compare

if __name__ == '__main__':
    parser = argparse.ArgumentParser()
    parser.add_argument('actual', default=None)
    parser.add_argument('expected', default=None)
    parser.add_argument('-t', '--threshold', help='Limit Cutoff of Number of Frames You Can Be Off', default=10)
    args = parser.parse_args()

    expected = DataSet(file_name=args.expected)
    actual = DataSet(file_name=args.actual)

    c = Compare(expected, actual, args.threshold)
    print(c.score())
